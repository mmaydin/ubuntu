[user]
    name =
    email =

[alias]
    st = status
    co = checkout
    di = diff
    br = branch
    ci = commit

[color]
    diff = auto
    status = auto
    branch = auto
    ui = true

[color "diff"]
    whitespace = red reverse

[core]
    excludesfile = ~/.gitignore
    editor = vim
    pager = cat
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
